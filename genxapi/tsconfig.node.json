{
	"include": ["frontend/env.d.ts", "vite.config.*", "vitest.config.*", "cypress.config.*", "playwright.config.*", "frontend/**/*.ts", "frontend/**/*.d.ts", "frontend/**/*.tsx", "frontend/**/*.vue"],
	"compilerOptions": {
    "baseUrl": ".",
		"composite": true,
		"allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Node",
		"lib": ["ES2021"],
		"forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
		"strict": true,
		"types": ["node", "vuetify"],
		"paths": {
			"@/*": [ "frontend/*" ]
		}
	}
}
