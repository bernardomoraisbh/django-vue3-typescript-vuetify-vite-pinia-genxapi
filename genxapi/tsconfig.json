{
	"files": [],
	"include": ["frontend/env.d.ts", "vite.config.*", "vitest.config.*", "cypress.config.*", "playwright.config.*", "frontend/**/*.ts", "frontend/**/*.d.ts", "frontend/**/*.tsx", "frontend/**/*.vue"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		},
		{
			"path": "./tsconfig.app.json"
		}
	],
	"compilerOptions": {
    "baseUrl": ".",
		"target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
		"composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client", "node", "vuetify"],
		"paths": {
			"@/*": [ "frontend/*" ]
		},
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true
	}
}
