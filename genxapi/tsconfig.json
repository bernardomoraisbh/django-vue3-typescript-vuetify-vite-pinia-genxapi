{
	"files": [],
	"include": ["frontend/env.d.ts", "vite.config.*", "vitest.config.*", "cypress.config.*", "playwright.config.*", "frontend/**/*.ts", "frontend/**/*.d.ts", "frontend/**/*.tsx", "frontend/**/*.vue"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		},
		{
			"path": "./tsconfig.app.json"
		}
	],
	"compilerOptions": {
    "baseUrl": ".",
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["esnext", "ES2021"],
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"types": ["vite/client", "node", "vuetify"],
		"paths": {
			"@/*": [
				"frontend/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/vuetify/types"
		]
	}
}
